<div class="book-fields" data-target="toggle.content">
  <%= book_form.label :title %>
  <div class="fields">
    <%= book_form.text_field :title %>
    <%= button_tag "Delete", class: "delete", data: { action: "value#update toggle#toggle", "index": book_form.index } %>
    <%= book_form.hidden_field :_destroy, value: 0, data: { target: "value.content" } %>
  </div>
</div>
